{
  "name": "diff-insight",
  "version": "1.0.0",
  "description": "AI-assisted LaTeX pull-request reviewer",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "ncc build src/index.js -o dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --selectProjects integration",
    "test:performance": "jest --selectProjects performance",
    "lint": "eslint .",
    "format": "prettier --write '**/*.{js,ts,json,yml}'",
    "all": "npm run format && npm run lint && npm run test:coverage && npm run build"
  },
  "keywords": [
    "github-action",
    "latex",
    "code-review",
    "ai",
    "diff"
  ],
  "author": "Diff-Insight Team",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "openai": "^4.28.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=20"
  }
}